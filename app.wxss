/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.diviter{
  width: 100%;
  height: 20rpx;
  background-color: #ddd;
}
.bdr{
  position: absolute;
}
.bdr::after{
  content: "";
  width:1rpx;
  height: 100%;
  background: #fcc;
  position: absolute;
  right: 0;
  top: 0;
}
/* 箭头封装 */
.arrow{
 display:flex;
  justify-content: space-between;
  align-items: center;
}
.arrow::after{
  content: "";
  height: 15rpx;
  width:15rpx;
  border:3rpx solid #ccc;
  display: block;
  border-left:none;
  border-bottom: none;
  transform: rotate(45deg);
}