<!--pages/login/login.wxml-->
<view class="container">
<!--封皮-->
 <view class="login-icon">
   <image class="login-img" src="../images/login.png" mode="widthFix"></image>
 </view>
 <!--登录表单-->
 <view class="login-form">
   <!--账号-->
   <view class="inputView">
     <image class="nameImage" src="../images/name.png"></image>
     <label class="loginLab">账号</label>
     <input class="inputText" placeholder="请输入账号" bindinput="pnoneInput" />
   </view>
   <!--线-->
   <view class="line"></view>
   <!--密码-->
   <view class="inputView">
     <image class="keyImage" src="../images/key.png"></image>
     <label class="loginLab">密码</label>
     <input class="inputText" password="true" placeholder='请输入密码' bindinput='passwordInput'></input>
   </view>
   <!--按钮-->
   <view class="loginBtnView">     
     <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">登录</button>   
   </view>
 </view>
</view>
