<!--index.wxml-->

<!--轮播图开始-->
  <view><swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular>
  <block wx:for="{{imgUrls}}" wx:key="id">
    <swiper-item>
      <image src="{{item}}" class="slide-image" width="355" height="150" mode="widthFix"/>
    </swiper-item>
  </block>
</swiper>
</view>
<!--轮播图结束-->
<view class="index-nav">
   <navigator class="nav-item " >
     <image src="../images/icons/grid-01.png"></image>
     <text>电影</text>
   </navigator>
   <navigator class="nav-item ">
     <image src="../images/icons/grid-03.png"></image>
     <text>音乐</text>
   </navigator>
   <navigator class="nav-item ">
     <image src="../images/icons/grid-04.png"></image>
     <text>美食</text>
   </navigator>
</view>
<!--线-->
<view class="diviter"></view>
<!--导航分区-->
<view class="index-enter">
  <navigator class="item">
     <image src="../images/link-01.png"></image>
  </navigator>
  <navigator>
     <image src="../images/link-02.png"></image>
  </navigator>
</view>